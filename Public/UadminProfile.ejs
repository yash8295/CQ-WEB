<!DOCTYPE html>
<html>
<head>
<title>CQ</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<style>
*{
	box-sizing: border-box;
}
#pmain{
	position:fixed;
	left:50px;
	right:0;
	top:60px;
	bottom:0;
	margin: auto;
	overflow: auto;
}
#main
{
	position: relative;
	min-height: 1px;
	width:85%;
	display: flex;
	flex-direction: column;
	align-items: stretch;
	box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
	background: rgb(249, 249, 249);
	border: 1px solid #eeeeee;
	border-radius: 2.5px;
	padding:1.25rem;
	overflow: auto;
	margin: 2% auto 4%;
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 14px;
}
#user_img
{
	width: 150px;
	height: 150px;
	padding: 0.25rem;
    background-color: #FCFCFC;
    border: 1px solid #ccc;
    border-radius: 0.25rem;
	box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
    max-width: 100%;
}
.btn{
	color:white;
	display: inline-block;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    touch-action: manipulation;
    cursor: pointer;
	border: 1px solid white; 
}
.d0{
	width:100%;
	margin-bottom:25px;
}
.rowc{
	width: 100%;
	display: flex;
	justify-content: center;
}
.d10
{
	float: left;
	min-width:46%;
	box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
	position: relative;
	overflow: auto;
    min-height: 1px;
	margin:0px 30px 15px 10px;
	border: 1px solid #ddd;
}
.d20
{
	float: left;
	min-width:46%;
	box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
	position: relative;
    min-height: 1px;
	overflow: auto;
	margin:0px 5px 15px 10px;
	border: 1px solid #ddd;
}
.d11
{
	color: #333;
    background-color: #f5f5f5;
    border-color: #ddd;
	padding: 10px 15px;
    border-bottom: 1px solid transparent;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
	border-bottom: 1px solid #ddd;
}
.d12
{
	padding: 15px;
	background-color: #ffffff;
}
</style>
</head>
<body>
<% include usernav1 %>
<div id="pmain">
<div id="main">
	<div class="d0">
		<img src="default_user.png" id="user_img">
		<div style="display:flex;justify-content:flex-end;margin-right:15px;">
		<a href="/editProfile" style="display:inline-block;text-decoration:none;"><button class="btn" style="background-color:#337ab7;border-color:#2e6da4;color:white;">Edit</button></a>&nbsp;&nbsp;&nbsp;
		<a onclick="deluser()" style="display:inline-block;text-decoration:none;"><button class="btn" style="background-color:#f0ad4e;border-color:#f0ad4e;color:white;">Delete</button></a>
		</div>
	</div>
	<div class="rowc">
		<div class="d10">
			<div class="d11">
				Email
			</div>
			<div class="d12">
				<%= data[0].username %>
			</div>
		</div>
		<div class="d20">
			<div class="d11">
				Gender
			</div>
			<div class="d12">
				<%= data[0].gender %>
			</div>
		</div>
	</div>
	<div class="rowc">
	<div class="d10">
		<div class="d11">
			Name
		</div>
		<div class="d12">
			<%= data[0].name %>
		</div>
	</div>
	<div class="d20">
		<div class="d11">
			City
		</div>
		<div class="d12">
			<%= data[0].city %>
		</div>
	</div>
	</div>
	<div class="rowc">
	<div class="d10">
		<div class="d11">
			D.O.B
		</div>
		<div class="d12">
			<%= data[0].dob %>
		</div>
	</div>
	<div class="d20">
		<div class="d11">
			Phone
		</div>
		<div class="d12">
			<%= data[0].phoneno %>
		</div>
	</div>
	</div>
</div>
</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<script>
	document.getElementsByClassName('anc')[0].classList.add('active');
	document.getElementsByClassName('fa-user')[0].classList.add('act');
function deluser()
{
	var req=new XMLHttpRequest();
	req.open("PUT","/deleteUser");
	req.send();
	req.onload=function(){
		document.getElementById("alert2Center").innerHTML="User Deleted Successfully";
		document.getElementById("alert2").style.height="60px";
		document.getElementById("alert2").style.padding="20px";
		setTimeout(function(){
		document.getElementById("alert2").style.height="0px";
		document.getElementById("alert2").style.padding="0px";
		},2000);
	}
}
</script>
</html>